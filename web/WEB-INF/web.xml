<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ShopController</servlet-name>
        <servlet-class>us.zachandes.shop.controller.ShopController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopController</servlet-name>
        <url-pattern>/ProductDetail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>us.zachandes.shop.controller.AddToCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/AddedToCart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewCartController</servlet-name>
        <servlet-class>us.zachandes.shop.controller.ViewCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCartController</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BillController</servlet-name>
        <servlet-class>us.zachandes.shop.controller.BillController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BillController</servlet-name>
        <url-pattern>/Bill</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>genericShopHome.jsp</welcome-file>
    </welcome-file-list>
</web-app>